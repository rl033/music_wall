<form action="/users/signup" method="post">
  <div>
    <label>Name:</label>
    <input type="text" name="name" value="<%= @user.name %>">
  </div>
  <div>
    <label>Password:</label>
    <input type="text" name="password" value="<%= @user.password %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>